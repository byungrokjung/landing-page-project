# Telegram Bot Configuration
# 텔레그램 봇 설정

# Telegram Bot Token (BotFather에서 생성)
# Get this from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Telegram Webhook URL (선택사항 - 웹훅 사용 시)
# Optional - Only needed if using webhooks instead of polling
TELEGRAM_WEBHOOK_URL=https://your-domain.com/api/telegram/webhook

# Notification Settings
# 알림 시스템 설정

# Notification check interval in milliseconds (default: 5 minutes)
NOTIFICATION_CHECK_INTERVAL=300000

# Enable/disable notification monitoring on server start
NOTIFICATION_MONITOR_AUTO_START=true

# Database Settings (already configured in main .env)
# 데이터베이스 설정 (메인 .env에서 이미 설정됨)
# SUPABASE_URL=your_supabase_url
# SUPABASE_SERVICE_KEY=your_service_key

# OpenAI API (already configured in main .env)
# OpenAI API (메인 .env에서 이미 설정됨)
# OPENAI_API_KEY=your_openai_api_key